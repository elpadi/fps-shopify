<article class="contact-section">
	<header>
		<h2>{{ 'general.contact.title' | t }}</h2>
	</header>
	<main>
		<p>{{ shop.address.street }}<br>{{ shop.address.city }}, {{ shop.address.province_code }} {{ shop.address.zip }}</p>
		<p><a href="mailto:{{ shop.email }}">{{ shop.email }}</a><br><a href="tel:{{ shop.phone }}">{{ shop.phone }}</a></p>
		<p>{{ 'general.contact.operating_hours' | t }}<br>{{ 'general.contact.days_open' | t }}</p>
	</main>
	<footer>
		<ul class="horizontal-list">
			{%- assign social_accounts = 'Facebook, Twitter, Pinterest, Instagram' | split: ', ' -%}
			{% for social in social_accounts %}
				{%- assign social_handle = social | handleize -%}
				{% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
				{% capture social_icon %}icon-{{ social_handle }}{% endcapture %}
				{% if settings[social_link] != blank %}
				<li><a class="image-link" href="{{ settings[social_link] }}" target="_blank" rel="nofollow" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}">{% include social_icon %}</a></li>
				{% endif %}
			{% endfor %}
		</ul>
	</footer>
</article>
