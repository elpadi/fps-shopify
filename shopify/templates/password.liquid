{% layout 'password' %}
<h2>{{ 'general.password_page.opening_soon' | t }}</h2>
<p>The store is not open to the public just yet. You can see a preview if you have the store password.</p>
<h2>{{ 'general.password_page.login_form_heading' | t }}</h2>
	{% form 'storefront_password' %}
	{{ form.errors | default_errors }}
		<div class="oneline-form">
			<input type="password" name="password" id="password" class="input-group-field" placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}" autofocus>
			<button type="submit" class="btn password-page__login-form__submit">{{ 'general.password_page.login_form_submit' | t }}</button>
		</div>
	{% endform %}
<h2>Admins Can Login Below</h2>
<p class="admin-login">{{ 'general.password_page.admin_link_html' | t }}</p>
