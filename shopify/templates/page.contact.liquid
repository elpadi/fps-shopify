<article id="page-main" class="template-main single-column">
	<header><h1>{{ page.title }}</h1></header>
	<main>{{ page.content }}</main>
	<footer>
		{% form 'contact' %}
			{% if form.posted_successfully? %}
			<p class="form-success">{{ 'contact.form.post_success' | t }}</p>
			{% endif %}

			{{ form.errors | default_errors }}

			<label>{{ 'contact.form.name' | t }}
				<input type="text"
					name="contact[name]"
					placeholder="Jane Smith"
					value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
			</label>
			<label>{{ 'contact.form.email' | t }}
				<input type="email"
					email="contact[email]"
					placeholder="user@example.com"
					spellcheck="false"
					autocomplete="off"
					autocapitalize="off"
					value="{% if form[email] %}{{ form[email] }}{% elsif customer %}{{ customer.email }}{% endif %}">
			</label>
			<label>{{ 'contact.form.phone' | t }}
				<input type="tel"
					phone="contact[phone]"
					placeholder="555-555-5555"
					pattern="[0-9\-]*"
					value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
			</label>
			<label>{{ 'contact.form.message' | t }}
				<textarea rows="10" name="contact[body]">{% if form.body %}{{ form.body }}{% endif %}</textarea>
			</label>

			<input type="submit" class="btn" value="{{ 'contact.form.send' | t }}">
		{% endform %}
	</footer>
</article>
