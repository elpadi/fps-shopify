<section id="home-featured">
	{% if section.settings.title != blank %}<h2>{{ section.settings.title | escape }}</h2>{% endif %}
	<ul class="image-grid horizontal-list">
		{%- assign collection = collections[section.settings.collection] -%}
		{% for product in collection.products limit: 4 %}<li>{% include 'collection-product' %}</li>{% endfor %}
	</ul>
</section>
{% schema %}
  {
    "name": "Featured collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured collection",
        "category": "Collection"
      }
    ]
  }
{% endschema %}
