<style>
#main-footer {background-image:url({{ 'repeater-wave.png' | asset_url }});}
#main-footer::before {background-image: url({{ 'icon-logo.svg' | asset_url }});}
</style>
<footer id="main-footer">
	<div class="main-width">
		{% include 'newsletter-prompt' %}
		<hr>
		<div id="footer-cols">
			{% include 'contact' %}
			{% include 'secondary-menu', menu_handle: section.settings.footer_linklist %}
			{% include 'instagram-showcase' %}
		</div>
	</div>
	<p id="fine-print"><span>&copy; {{ 'layout.footer.copyright' | t }} {{ 'now' | date: "%Y" }} {{ shop.name }}.</span> <span>All rights reserved. <a href="http://sheilabuchanandesigns.com" target="_blank">Site design</a></span></p>
</footer>
{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "First menu",
        "default": "footer"
      }
    ]
  }

{% endschema %}
